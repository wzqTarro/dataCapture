<?xml version="1.0" encoding="utf-8"?>
<!-- 
	scan 配置文件发生改变，重新加载  
	scanPeriod 监测配置文件是否有修改的时间间隔 scan=true时生效
	debug 打印logback内部日志信息，实时监控logback运行状态
 -->
<configuration scan="true" scanPeriod="60 seconds" debug="false">
	<!-- 默认为default -->
	<contextName>logback</contextName>
	<!-- 设置属性添加到上下文 -->
	<property name="LOG_HOME" value="./logback"/>
	<!-- 格式化日志输出节点-->
	<!-- 输出到控制台 -->
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<!-- 拦截器，拦截error级别以下的日志 -->
		<!-- <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>-->
		<encoder>
			<pattern>
				%d{HH:mm:ss.SSS} %contextName [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>
	<!-- 输出到文件 -->
	<appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- 日志名称 -->
			<fileNamePattern>
				<!-- ${LOG_HOME}/logback.%d{yyyy-MM-dd}.log -->
				${LOG_HOME}/consumer.%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<!-- 保留天数-->
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %contextName [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<!--myibatis log configure--> 
    <logger name="com.apache.ibatis" level="TRACE"/>
    <logger name="java.sql.Connection" level="DEBUG"/>
    <logger name="java.sql.Statement" level="DEBUG"/>
    <logger name="java.sql.PreparedStatement" level="DEBUG"/>
	
	<root level="info">
		<appender-ref ref="console"/>
		<appender-ref ref="file"/>
	</root>
	
	<!-- logback为java中的包 -->
    <!--<logger name="com.dudu.controller"/>-->
    <!--logback.LogbackDemo：类的全路径 -->
    <!-- 只在控制台输出WARN及其以上级别的日志信息  additivity=false表示不使用父节点设置 -->
    <logger name="com.zhongmin.controller" level="WARN" additivity="false">
        <appender-ref ref="console"/>
    </logger>

    <!-- 测试环境+开发环境. 多个使用逗号隔开. -->
    <springProfile name="test,dev">
        <logger name="com.zhongmin.controller" level="info" />
    </springProfile>
    <!-- 生产环境. -->
    <springProfile name="prod">
        <logger name="com.zhongmin.controller" level="ERROR" />
    </springProfile>
	
</configuration>